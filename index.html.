  <script>
    let countdown = 60;
    const countdownElement = document.getElementById('countdown');
    const revealElement = document.getElementById('reveal');
    const alarm = document.getElementById('alarm');
    const traceElement = document.getElementById('trace');

    const traceLines = [
      "[TRC] Initializing trace route...",
      "[TRC] Accessing deep system logs...",
      "[TRC] Bypassing VPN layers...",
      "[TRC] Tracing device MAC address...",
      "[TRC] Cross-referencing IP spoofing...",
      "[TRC] Attempting geographic triangulation...",
      "[TRC] Obfuscation detected. Breaking through...",
      "[TRC] Locating device coordinates...",
      "[TRC] Confirmed breach origin: Sector 7G...",
      "[TRC] Identity Match: Yoshimitsu – Wulf Clan",
      "[TRC] Trace terminated. Hacker cloaked."
    ];

    let traceIndex = 0;

    function runTrace() {
      if (traceIndex < traceLines.length) {
        traceElement.textContent += traceLines[traceIndex] + "\n";
        traceIndex++;
        setTimeout(runTrace, 3000);
      }
    }

    runTrace();

    const interval = setInterval(() => {
      countdown--;
      countdownElement.textContent = countdown;
      if (countdown <= 0) {
        clearInterval(interval);
        alarm.pause();
        alarm.currentTime = 0;
        document.querySelectorAll('.fake-popup, #countdown, .notification, #trace').forEach(el => el.style.display = 'none');
        revealElement.style.display = 'block';
      }
    }, 1000);
  </script>
